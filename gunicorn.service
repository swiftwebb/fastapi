[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=ope
Group=ope
WorkingDirectory=/home/ope/app/src/
Environment="PATH=/home/ope/app/venv/bin"
EnvironmentFile=/home/ope/.env
ExecStart=/home/ope/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target